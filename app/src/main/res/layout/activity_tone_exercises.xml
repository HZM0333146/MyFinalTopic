<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tone_exercises"
    android:background="@drawable/blackboardbackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dick.myfinaltopic.ToneExercises"
    android:layerType="none">
    <ImageView
        android:id="@+id/tone_exercises_back"
        android:background="@drawable/icon_goback"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent">

        <Button
            android:text="clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_resume"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:elevation="0dp"
            style="@style/Widget.AppCompat.Button"
            android:background="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:typeface="monospace"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <ImageView
        app:srcCompat="@drawable/blackboard"
        android:id="@+id/imageView2"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp" />

    <ImageView
        android:id="@+id/iv_canvas"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:layout_width="200dp"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/frame"
        android:id="@+id/question_background"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        app:srcCompat="@drawable/volume"
        android:id="@+id/btn_sound"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/question_background"
        android:layout_toRightOf="@+id/question_background"
        android:layout_toEndOf="@+id/question_background" />

    <TextView
        android:id="@+id/question"
        android:textColor="@android:color/white"
        android:textSize="150sp"
        android:text="獲"
        android:textAlignment="center"
        android:layout_alignTop="@+id/question_background"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@android:drawable/ic_menu_compass"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/question_background"
        android:layout_toEndOf="@+id/question_background"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:id="@+id/imageView6" />

</RelativeLayout>