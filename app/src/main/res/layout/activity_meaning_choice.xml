<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_meaning_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blackboardbackground"
    tools:context="com.example.dick.myfinaltopic.MeaningChoice">

    <ImageView
        android:id="@+id/meaning_choice_back"
        android:background="@drawable/icon_goback"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Button"
        android:id="@+id/button6"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_width="145dp"
        android:layout_height="68dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:textAlignment="center" />

    <TextView
        android:text="Button"
        android:id="@+id/button4"
        android:layout_weight="1"
        android:onClick="onClick_Event"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_width="145dp"
        android:layout_height="68dp"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textAlignment="center" />

    <TextView
        android:text="Button"
        android:id="@+id/button5"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginBottom="32dp"
        android:layout_width="145dp"
        android:layout_height="68dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/frame"
        android:id="@+id/imageView4"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Question"
        android:textColor="@color/brown_content"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="90sp"
        android:layout_width="match_parent"
        android:text="漢堡"
        android:layout_below="@+id/meaning_choice_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_height="100dp" />

    <TextView
        android:text="Button"
        android:id="@+id/button3"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_width="145dp"
        android:layout_height="68dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

</RelativeLayout>
